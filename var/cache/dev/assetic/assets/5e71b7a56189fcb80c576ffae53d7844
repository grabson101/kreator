var app = angular.module('myApp', []);
app.controller('customersCtrl', function($scope, $http)
{
  getTable();
  $scope.heh = "kurdebalans";
  function getTable()
    {

        $http.get(Routing.generate('getTable'))
        .then(function (response) {$scope.hours = response.data;});
    };


  $scope.countRow = function (index)
    {
      var total= 0;
      foreach x in $scope.heh
        foreach datas in x[index]
          total+=datas.Ilosc_godzin;

      return index;

    };
  $scope.changeRow = function (datas)
    {
      datas= parseInt(datas);
      datas-=8;
      if(datas<0)
        datas=16;
      return datas;
    }

});
